<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Blog</title>
</head>

<body style="background-color: rgb(5, 5, 17); color: white;">
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article => { %>
        <div class="card mt-4" style="background-color: rgb(2, 2, 20); color: white; border-style: solid; border-color: white;">
            <div class="card-body">
                <h4 class="card-title"><%= article.title  %></h4>
            </div>
            <div class="card-subtitle text-muted mb-2 "><%= article.createdAt.toLocaleDateString() %></div>
            
        </div>
        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read more</a>
        <a href="articles/edit/<%= article.id%>" class="btn btn-info">Edit</a>
        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% }) %>
    </div>
</body>

</html>